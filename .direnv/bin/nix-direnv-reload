#!/usr/bin/env bash
set -e
if [[ ! -d "/home/necropheus/Projects/segundo-parcial-modelo" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/necropheus/Projects/segundo-parcial-modelo")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/necropheus/Projects/segundo-parcial-modelo" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/necropheus/Projects/segundo-parcial-modelo/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/necropheus/Projects/segundo-parcial-modelo/.envrc" "/home/necropheus/Projects/segundo-parcial-modelo/.direnv"/*.rc
